html
    head
        title Main
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="./util.js")
    body
        div 
            script.
                var toResults = function() {
                  window.location.href="/products_list";  
                }
                var toForm = function() {
                  window.location.href="/products";  
                }

        button(onclick='toForm()') Form
        button(onclick='toResults()') Results

        if isFormActive
            div 
                form(class="form-control" name="form" action="/products" method="post" enctype="application/x-www-form-urlencoded")
                    label(for="title") Title
                    input(type="text" name="title")
                    br
                    label(for="price") Price
                    input(type="text" name="price")
                    br
                    label(for="link") link
                    input(type="text" name="thumbnail")
                    br
                    button Submit 
        else
            div
                table(class="table")
                    thead
                        tr
                            th Name
                            th Age
                            th image 
                    tbody
                        each product in products
                            tr
                                td #{product.title}
                                td #{product.price}
                                td
                                    img(src=product.thumbnail style="width: 5rem;")

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous")
        script("https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"     crossorigin="anonymous")
        
        

                    



    